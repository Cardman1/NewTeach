<Page x:Class="TeachBook.View.Pages.DeletePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeachBook.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DeletePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1">
            <Label>Фамилия ученика</Label>
            <Label>Имяученика</Label>
            <Label>Отчество ученика</Label>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <TextBox x:Name="FirstNameTB"></TextBox>
            <TextBox x:Name="LastNameTB"></TextBox>
            <TextBox x:Name="PatronomicTB"></TextBox>
        </StackPanel>
        <Button Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Click="DeleteStudent">DELETE</Button>
    </Grid>
</Page>
